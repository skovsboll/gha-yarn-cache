{
  "name": "gha-yarn-cache",
  "version": "1.0.0",
  "description": "1-liner yarn install cache for GitHub Actions",
  "scripts": {
    "build": "ncc build src/save.js --out dist/save --minify && ncc build src/restore.js --out dist/restore --minify",
    "test": "echo 'No test framework configured'",
    "lint": "eslint . --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . --no-error-on-unmatched-pattern --fix"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "github",
    "action",
    "yarn",
    "install",
    "cache"
  ],
  "author": "c-hive",
  "license": "MIT",
  "//dependencies": {},
  "dependencies": {
    "@actions/cache": "^0.2.1",
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "hash-files": "^1.1.1"
  },
  "//devDependencies": {
    "eslint*": "code style",
    "pre-commit": "run scripts before each commit",
    "prettier": "code formatting"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1"
  },
  "engines": {
    "npm": ">=6.6"
  }
}
